<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Client Name: <%= @client.first_name + " " + @client.last_name %></h3>
  </div>
  <div class="panel-body">
    <%= link_to "Edit Client", edit_district_client_path(@district, @client.id), class: "btn btn-default" %>
  </div>
  <ul class="list-group">
    <li class="list-group-item">ID Number: <%= @client.id %></li>
    <li class="list-group-item">Phone Number: <%= @client.primary_phone %></li>
    <li class="list-group-item">Address: <%= @client.address %></li>
    <li class="list-group-item">City: <%= @client.city %></li>
    <li class="list-group-item">State: <%= @client.state %></li>
    <li class="list-group-item">Maximum Monthly Service Hours: <%= (@client.max_monthly_minutes)/60.0 %></li>
  </ul>
</div>
