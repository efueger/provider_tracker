<div class="row">
  <div class="col-lg-12">
    <fieldset>
      <%= form_for person, url:{action: action}, :html => {:class => "form" } do |f| %>
        <h2><%= form_title %></h2>
        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :primary_phone %><br>
          <%= f.text_field :primary_phone, class: "form-control" %><br>
        </div>

        <div class="form-group">
          <%= f.label :full_street_address %><br>
          <%= f.text_field :full_street_address, class: "form-control" %><br>
        </div>
        <div class="form-group">
          <label for=:group>Select <%= select_title %> (hold shift to select more than one):</label>
          <%= select_tag "clients[]", options_for_select(group.collect{|x| [x.last_name + ", " + x.first_name,x.id]}, care_group.collect{|x| x.id}), {:multiple => :multiple, :size => 10} %>
        </div>
        <%= f.submit "Save", class: "btn btn-default" %>
      <% end %>
    </fieldset>
  </div>
</div>
