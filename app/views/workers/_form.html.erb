<div class="row">
  <div class="col-lg-12">
    <fieldset>
      <%= form_for worker, url:{action: action}, :html => {:class => "form" } do |f| %>
        <h2><%= title %></h2>
        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :primary_phone %><br>
          <%= f.text_area :primary_phone, class: "form-control" %><br>
        </div>
        <div class="form-group">
          <label for=:client>Select Client(s) for Worker (hold shift to select more than one):</label>
          <%= select_tag "clients[]", options_for_select(@all_clients.collect{|x| [x.first_name,x.id]}, @worker.clients.collect{|x| x.id}), {:multiple => :multiple, :size => 10} %>
        </div>
        <%= f.submit "Save", class: "btn btn-default" %>
      <% end %>
    </fieldset>
  </div>
</div>
